<script type="text/javascript">

  const Toast = Swal.mixin({
    width: 450,
    toast: true,
    position: 'top',
    showConfirmButton: false,
    timer: 5000,
  })


  var table = $("#example").DataTable({
   
    processing: true,
    ordering: false,

    ajax: {
      url: "/data",
      type: "POST",
      datatype: "json"
    },
  });

  let qrboxFunction = function (viewfinderWidth, viewfinderHeight) {
    let minEdgePercentage = .9; // 80%
    let minEdgeSize = Math.min(viewfinderWidth, viewfinderHeight);
    let qrboxSize = Math.floor(minEdgeSize * minEdgePercentage);
    return {
      width: qrboxSize,
      height: qrboxSize,
    };
  };
  let config = {
    qrbox: qrboxFunction,
    fps: 15,
    rememberLastUsedCamera: true,
    aspectRatio: 1.3,
    supportedScanTypes: [0],
  };
  
  var lastResult;

  function scanSuccess(decodedText, decodedResult) {
    if (decodedText !== lastResult) {
      lastResult = decodedText;

      fetch("/qrcode", {
        method: "POST",
        body: JSON.stringify({ data: lastResult }),
        headers: { "Content-Type": "application/json" },
      })
        .then((res) => res.json())
        .then((response) => {
  
          if (response.status === "Invalid") {
            Toast.fire({
              icon: 'error',
              title: "Not Registered Student"
            })
          }
          if (response.status === "Error") {
            Toast.fire({
              icon: 'error',
              title: "Invalid QR Code format"
            })
          }

          if (response.attendance) {
            Toast.fire({
              icon: 'error',
              title: `${response.studentArr[1]}, has already completed his/her attendance for today`
            })
          } else {
            Toast.fire({
              icon: 'success',
              title: `${response.studentArr[1]}, ${response.status} at ${response.time} in the ${response.shift}`
            })
            table.ajax.reload();
          }

          document.querySelector("#student_id").innerHTML = response.studentArr[0] //student id data
          document.querySelector("#student_name").innerHTML = response.studentArr[1] //student id name
          document.querySelector("#student_year").innerHTML = response.studentArr[2] //student id year
          document.querySelector("#student_course").innerHTML = response.studentArr[3] //student id course
       
        });
      
    }
  }

  let html5QrcodeScanner = new Html5QrcodeScanner("reader", config, false);

  html5QrcodeScanner.render(scanSuccess);
</script>

