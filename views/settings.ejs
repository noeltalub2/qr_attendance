          </li><!-- End Blank Page Nav -->
        </ul>

      </aside><!-- End Sidebar-->
      <main class="main" id="main">
        <div class="pagetitle">
          <h1>Settings</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>


              <li class="breadcrumb-item active">Settings</li>
            </ol>
          </nav>
        </div>
        <section class="section student">
          <%-include ("./Include/Admin/message.ejs")%>
            <div class="row">

              <div class="col-lg-6">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Change Password</h5>
                    <form action="/change_password" method="post" class="needs-validation" id="form-pass" novalidate>


                      <div class="mb-3">
                        <label for="passwordInpOld" class="form-label">Old Password</label>
                        <input type="password" name="oldPassword" class="form-control" id="passwordInpOld" required>
                        <p class="mb-0 text-danger" id="status-old"></p>
                      </div>

                      <div class="mb-3">
                        <label for="passwordInpNew" class="form-label">New Password</label>
                        <input type="password" name="newPassword" class="form-control" id="passwordInpNew"
                          pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                        <div class="invalid-feedback">
                          Must contain at least one number and one uppercase and lowercase
                          letter,
                          and at
                          least 8 or more characters
                        </div>
                        <p class="mt-1 mb-0 text-danger" id="status2"></p>
                      </div>
                      <div class="mb-2">
                        <button type="submit" class="btn btn-success btn-sm">Change Password</button>
                      </div>

                    </form>

                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Backup and Reset Data</h5>
                    <div class="delete"><!-- Button trigger modal -->
                      <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <small><i class="bi bi-exclamation-octagon me-1"></i>Warning!
                          By deleting this database all of the data will be permanently deleted.</small>

                      </div>
                      <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Delete Database
                      </button>

                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <form action="/delete_database" method="post" id="form-del">
                              <div class="modal-header">
                                <h1 class="modal-title fs-6 text-danger" id="exampleModalLabel">Delete Database?</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                  aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <div class="text-content">
                                  <div class="">
                                    <p class="mb-0">Are you sure to delete database?</p>
                                    <p>You <strong>can't undo</strong> this action.</p>
                                  </div>
                                  <label for="delInput" class="form-label">Enter admin password to confirm</label>
                                  <input id="delInput" class="form-control form-control-sm" onkeyup="delDatabase()"
                                    type="password">
                                  <p id="status" class="text-danger mb-0"></p>
                                </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm"
                                  data-bs-dismiss="modal">Close</button>
                                <input type="submit" id="delete-button" value="Confirm Delete"
                                  class="btn btn-danger btn-sm" disabled></input>
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </section>
      </main>


      <%-include ("./Include/Admin/script.ejs")%>
        <script>
          function delDatabase() {
            var password = document.getElementById("delInput").value
            fetch('/delete_database', {
              method: "POST",
              body: JSON.stringify({ password }),
              headers: { "Content-Type": "application/json" },
            })
              .then((res) => res.json())
              .then((response) => {
                console.log(response)
                if (response.status === "success") {

                  document.getElementById("delete-button").removeAttribute('disabled')
                }

                if (response.status === "error") {

                  document.getElementById("delete-button").setAttribute('disabled', '')
                }

              });

          }
        </script>

  </body>

  </html>